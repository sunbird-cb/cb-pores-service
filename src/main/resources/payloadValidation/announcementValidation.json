{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "minLength": 5,
      "maxLength": 500
    },
    "category": {
      "type": "string"
    },
    "sourceName": {
      "type": "string"
    },
    "channel": {
      "type": "string"
    },
    "imgUrl": {
      "type": "string",
      "format": "uri"
    },
    "createdFor": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "createdOn": {
      "type": "date",
      "format": [
        "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
        "epoch_millis"
      ]
    },
    "updatedOn": {
      "type": "date",
      "format": [
        "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
        "epoch_millis"
      ]
    },
    "expiredOn": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [
    "name",
    "description",
    "category",
    "sourceName",
    "channel",
    "createdFor"
  ]
}